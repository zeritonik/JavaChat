<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="627.0" prefWidth="564.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaChat.ChatController">
   <children>
      <VBox alignment="CENTER" prefHeight="506.0" prefWidth="270.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Чат">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="6.0" />
               </VBox.margin>
            </Text>
            <ListView fx:id="chatField" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="6.0" />
               </VBox.margin>
            </ListView>
            <HBox>
               <children>
                  <TextField fx:id="messageField" onKeyPressed="#enterSendPressed" promptText="Напишите сообщение" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="6.0" />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
                  <Button layoutX="1.0" mnemonicParsing="false" onAction="#sendButtonPressed" style="-fx-background-color: rgb(20, 200, 80);" text="Отправить" HBox.hgrow="SOMETIMES" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>

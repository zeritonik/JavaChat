<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="700.0" stylesheets="@chat.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaChat.ChatController">
   <children>
      <VBox alignment="CENTER" styleClass="vbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu id="styleMenu" mnemonicParsing="false" text="Style">
                     <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#chooseStyle" selected="true" text="Style1">
                           <toggleGroup>
                              <ToggleGroup fx:id="styleGroup" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#chooseStyle" text="Style2" toggleGroup="$styleGroup" />
                     </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label id="chatLabel" minWidth="-Infinity" text="Chat" />
            <ListView fx:id="chatField" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ListView>
            <HBox styleClass="hbox">
               <children>
                  <TextField fx:id="messageField" onKeyPressed="#enterSendPressed" promptText="Напишите сообщение..." HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
                  <Button layoutX="1.0" mnemonicParsing="false" onAction="#sendButtonPressed" text="Отправить" textAlignment="CENTER" HBox.hgrow="SOMETIMES">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" opacity="0.74" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@send.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>

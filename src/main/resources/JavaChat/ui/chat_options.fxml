<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" minWidth="-Infinity" prefHeight="750.0" prefWidth="300.0" styleClass="vbox" stylesheets="@chat_options.css" type="VBox" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="capital-label" text="Настройки" />
      <ListView fx:id="membersList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" styleClass="hbox">
         <children>
            <TextField fx:id="newMemberField" promptText="имя нового участника" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addMember" text="Добавить" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="3.0" right="3.0" />
   </padding>
</fx:root>
